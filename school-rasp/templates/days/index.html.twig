{% extends 'base.html.twig' %}

{% block title %}Days index{% endblock %}

{% block body %}
    <h1>Days index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>schedule</th>
            <th>teacher</th>
            <th>lesson</th>
            <th>time</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for day in days %}
            <tr>
                <td>{{ day.id }}</td>
                <td>{{ day.name }}</td>
                <td>{{ day.schedule }}</td>
                <td>{{ day.teacher }}</td>
                <td>{{ day.lesson }}</td>
                <td>{{ day.timeLesson }} урок</td>
                <td>
                    <a href="{{ path('days_show', {'id': day.id}) }}">show</a>
                    <a href="{{ path('days_edit', {'id': day.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('days_new') }}">Create new</a>
    <div class="nav">
        <ul>
            <li><a href="/schedule/crud">Расписание</a></li>
            <li><a href="{{ path('days_index') }}">Дни</a></li>
            <li><a href="{{ path('teacher_index') }}">Учителя</a></li>
            <li><a href="{{ path('lesson_index') }}">Предметы</a></li>
        </ul>
    </div>
{% endblock %}
