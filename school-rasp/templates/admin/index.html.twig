{% extends 'base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <ul>
        <li><a href="/logout">Выйти из аккаунта</a></li>
    </ul>
    <h1>Admin index</h1>
    <a href="{{ path('admin_new') }}">Create new</a>
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Roles</th>
            <th>Password</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <td>{{ admin.id }}</td>
                <td>{{ admin.username }}</td>
                <td>{{ admin.roles ? admin.roles|json_encode : '' }}</td>
                <td>{{ admin.password }}</td>
                <td>
                    <a href="{{ path('admin_show', {'id': admin.id}) }}">show</a>
                    <a href="{{ path('admin_edit', {'id': admin.id}) }}">edit</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>Создание, изменение удаление</p>
    <div class="nav">
        <ul>
            <li><a href="/schedule/crud">Расписание</a></li>
            <li><a href="{{ path('days_index') }}">Дни</a></li>
            <li><a href="{{ path('teacher_index') }}">Учителя</a></li>
            <li><a href="{{ path('lesson_index') }}">Предметы</a></li>
        </ul>
    </div>
{% endblock %}
